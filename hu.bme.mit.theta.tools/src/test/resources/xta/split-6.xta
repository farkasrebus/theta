const int N = 6;

typedef int[1, N] id_t;
process Splitex(const id_t pid) {
	clock x;
	clock y;
	clock z;
	
	state
		S0,
		S1,
		S2,
		errorloc;
	
	init S0;
	
	trans
		S0 -> S1 { assign z = 0; },
		S1 -> S2 { guard y > 2; assign y = 0; },
		S2 -> errorloc { guard x - z < 1 && z - y < 1; },
		S2 -> S0 { guard x > 1; assign z = 0; };
}

system Splitex;